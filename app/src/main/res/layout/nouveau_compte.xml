<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    tools:context=".MonCompteActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/tvMonCompte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon Compte"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="16dp" />

    <!-- Profile Image -->

    <!-- Name -->
    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvMonCompte" />

    <!-- Email -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Corinne Servières"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/ivProfile" />

    <!-- Password Section -->

    <!-- Address Section -->

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="corinne.servieres@iut-rodez.fr"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="325dp"

        android:layout_height="22dp"
        android:layout_marginTop="4dp"
        android:text="***********************"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_margin="8dp"
        app:layout_constraintEnd_toStartOf="@+id/ivPasswordToggle"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPasswordLabel" />

    <TextView
        android:id="@+id/tvPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:text="Mot de passe"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        app:layout_constraintStart_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvEmail" />

    <ImageView
        android:id="@+id/ivPasswordToggle"
        android:layout_width="30dp"
        android:layout_height="22dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPasswordLabel" />

    <!-- Modify Account Button -->

    <TextView
        android:id="@+id/tvAddressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Adresse"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        app:layout_constraintEnd_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvPassword" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="316dp"
        android:layout_height="66dp"
        android:layout_marginTop="4dp"
        android:text="464 Boulevard des Tamaris,\n12850 Onet Le château,\nFrance"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAddressLabel" />

    <Button
        android:id="@+id/btnModifyAccount"
        android:layout_width="451dp"
        android:layout_height="44dp"
        android:backgroundTint="#00FFBF"
        android:fontFamily="sans-serif-medium"
        android:text="Modifier le compte"
        android:textColor="#000000"
        android:textSize="14sp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>